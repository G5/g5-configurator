<% title "Remote Apps" %>

<table>
  <tr>
    <th>Entry</th>
    <th>Name</th>
    <th>Web Url</th>
    <th>Deploy Status</th>
    <th>Actions</th>
  </tr>
  <% for remote_app in @remote_apps %>
    <tr>
      <td><%= remote_app.entry.name %></td>
      <td><%= remote_app.name %></td>
      <td><%= link_to remote_app.web_url, remote_app.web_url %></td>
      <td><%= remote_app.create_status %></td>
      <td>
        <%= link_to "Show", remote_app %>
        <%= link_to "Configurations", remote_app_instructions_path(remote_app) %>
      </td>
    </tr>
  <% end %>
</table>

