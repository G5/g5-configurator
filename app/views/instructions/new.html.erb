<% title "New Instruction" %>
<% header_right link_to("Cancel", instructions_path, class: "btn") %>

<%= form_for @instruction, html: { class: "form-horizontal" } do |f| %>
  <%= f.error_messages %>
  <fieldset class="well">
    <legend>Instruction</legend>
    <div class="control-group">
      <%= f.label :remote_app_id, "Target", class: "control-label" %>
      <div class="controls">
        <%= f.collection_select :remote_app_id, RemoteApp.all, :id, :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :body, "Body", class: "control-label" %>
      <div class="controls">
        <%= f.text_area :body, rows: 5 %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit class: "btn btn-success" %></p>
      </div>
    </div>
  </fieldset>
<% end %>
