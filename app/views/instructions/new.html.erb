<% title "New Configuration" %>

<%= form_for @instruction do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :remote_app_id, "Deployer" %>
    <%= f.collection_select :remote_app_id, RemoteApp.all, :id, :name %>
  </p>
  
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, rows: 5 %>
  </p>
  
  <p><%= f.submit "Save" %></p>
<% end %>


<p><%= link_to "Back to Feed", instructions_path %></p>
